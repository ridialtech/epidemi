{% extends 'admin/base.html.twig' %}
{% block title %}Modifier un point{% endblock %}
{% block content %}
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Modifier un point de surveillance</h6>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('point_edit', {id: point.id}) }}">
                    <div class="form-group">
                        <label for="psNom">Nom du point</label>
                        <input type="text" class="form-control" id="psNom" name="name" value="{{ point.name }}" list="point-list">
                        <datalist id="point-list">
                            {% for option in suggestions %}
                                <option value="{{ option }}">
                            {% endfor %}
                        </datalist>
                    </div>
                    <div class="form-group">
                        <label for="psZone">Zone</label>
                        <select class="form-control" id="psZone" name="zone">
                            {% for zone in zones %}
                                <option value="{{ zone.id }}" {% if point.zone.id == zone.id %}selected{% endif %}>{{ zone.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
